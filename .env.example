# EcoAgent Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED: Google API Configuration
# ============================================================================

# Your Google Gemini API key (required for full functionality)
# Get one at: https://aistudio.google.com/app/apikeys
GOOGLE_API_KEY=your_api_key_here

# ============================================================================
# OPTIONAL: Application Settings
# ============================================================================

# Environment: development, staging, or production
ECOAGENT_ENVIRONMENT=development

# Database configuration
# SQLite path for local development
ECOAGENT_DB_PATH=./ecoagent.db

# Enable/disable Google Search grounding (for real-time info)
ECOAGENT_ENABLE_GOOGLE_SEARCH=true

# ============================================================================
# OPTIONAL: Logging Configuration
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=text

# ============================================================================
# OPTIONAL: Server Configuration
# ============================================================================

# API server host (for serve command)
API_HOST=127.0.0.1

# API server port
API_PORT=8000

# ============================================================================
# OPTIONAL: Feature Flags
# ============================================================================

# Enable context engineering features
ENABLE_CONTEXT_ENGINEERING=true

# Enable long-running operations
ENABLE_OPERATIONS=true

# Enable observability/metrics
ENABLE_OBSERVABILITY=true

# ============================================================================
# OPTIONAL: Advanced Settings
# ============================================================================

# Maximum conversation history length
MAX_HISTORY_LENGTH=20

# Session timeout (in minutes)
SESSION_TIMEOUT=60

# Context management TTL (in seconds)
CONTEXT_TTL=3600

# ============================================================================
# NOTE: Security
# ============================================================================
# Never commit .env file with real API keys to version control
# Use environment variables in production instead
# Example: export GOOGLE_API_KEY='your-key'
